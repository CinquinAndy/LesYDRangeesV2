{
    "name": "wordplate/wordplate",
    "description": "A modern WordPress stack to make PHP developers happier",
    "keywords": [
        "wordplate",
        "wordpress",
        "boilerplate"
    ],
    "autoload": {
        "files":[
            "src/helpers.php"
        ],
        "psr-4": {
            "App\\": "src/"
        }
    },
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "ext-curl": "*",
        "ext-json": "*",
        "composer/installers": "2.3.0",
        "johnpbloch/wordpress-core": "6.8.2",
        "johnpbloch/wordpress-core-installer": "2.0",
        "mailgun/mailgun-php": "^3.5",
        "nyholm/psr7": "^1.5",
        "roots/bedrock-autoloader": "1.0.4",
        "roots/wp-password-bcrypt": "1.3.0",
        "symfony/http-client": "^6.2",
        "symfony/http-foundation": "v6.3.2",
        "symfony/var-dumper": "v6.3.2",
        "vinkla/extended-acf": "13.8.0",
        "vlucas/phpdotenv": "v5.6.2"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "johnpbloch/wordpress-core-installer": true,
            "composer/installers": true,
            "php-http/discovery": true
        }
    },
    "extra": {
        "installer-paths": {
            "public/mu-plugins/{$name}": [
                "type:wordpress-muplugin"
            ],
            "public/plugins/{$name}": [
                "type:wordpress-plugin"
            ],
            "public/themes/{$name}": [
                "type:wordpress-theme"
            ]
        },
        "wordpress-install-dir": "public/wordpress"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org",
            "only": [
                "wpackagist-plugin/*",
                "wpackagist-theme/*"
            ]
        }
    ],
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
